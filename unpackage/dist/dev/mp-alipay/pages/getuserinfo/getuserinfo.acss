
page {
	background: #fff;
}
.authPage {
	position: fixed;
	top: 50%;
	left: 50%;
	width: 100%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	text-align: center;
}
.authPage>view .image {
	width: 200px;
	height: 200px;
}
.authPage>view .txt {
	margin-top: 100px;
}
.authPage>view .btn {
	margin-top: 50px;
	width: 70%;
	color: #fff;
	background: #00a2ed;
}

