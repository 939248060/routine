
.top-tab {
	position: fixed;
	width: 100%;
	top: 0;
	left: 0;
	z-index: 100;
	box-shadow: 0 10px 10px -7px #ddd inset;
}
.top-tab>view {
	width: 33.33%;
	text-align: center;
	height: 36px;
	line-height: 36px;
	border-bottom: 1px #ccc solid;
}
.selectOn {
	color: #00a2ed !important;
	border-bottom: 2px solid #00a2ed !important;
}
swiper {
	margin-top: 36px;
}

